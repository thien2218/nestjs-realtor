// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
   provider = "prisma-client-js"
}

datasource db {
   provider = "postgresql"
   url      = env("DATABASE_URL")
}

enum UserRole {
   BUYER
   REALTOR
   ADMIN
}

enum PropertyType {
   RESIDENTIAL
   CONDO
}

model User {
   id              String    @id @default(cuid())
   first_name      String
   last_name       String
   phone           String
   email           String    @unique
   hashed_password String
   created_at      DateTime  @default(now())
   updated_at      DateTime  @updatedAt
   role            UserRole
   refresh_token   String?
   homes           Home[]
   from_messages   Message[] @relation("from_messages")
   to_messages     Message[] @relation("to_messages")

   @@map("users")
}

model Home {
   id              String       @id @default(cuid())
   title           String
   address         String
   bedrooms_count  Int
   bathrooms_count Int
   city            String
   price           Float
   land_size       Float
   property_type   PropertyType
   listed_date     DateTime     @default(now())
   updated_at      DateTime     @updatedAt
   images          Image[]
   realtors        User[]
   messages        Message[]

   @@map("homes")
}

model Image {
   id         String   @id @default(cuid())
   url        String   @unique
   created_at DateTime @default(now())
   home_id    String
   home       Home     @relation(fields: [home_id], references: [id])

   @@map("images")
}

model Message {
   id            String   @id @default(cuid())
   text          String
   created_at    DateTime @default(now())
   home_id       String
   home          Home     @relation(fields: [home_id], references: [id])
   from          String
   from_messages User     @relation("from_messages", fields: [from], references: [id])
   to            String
   to_messages   User     @relation("to_messages", fields: [to], references: [id])

   @@map("messages")
}
